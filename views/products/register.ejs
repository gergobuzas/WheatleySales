<% layout('/layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">
     Register a new account!
    </h1>
    <div class="col-6 offset-3">
        <form action="/register" method="post" class="validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="email">Email address:</label>
                <input class="form-control" type="email" name="user[email]" id="email" placeholder="Email" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please give a valid email address!
                </div>                          
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password:</label>
                <input class="form-control"  type="password" name="user[password]" id="password" placeholder="Password" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please give a valid password!
                </div>
            </div>
            <button class="btn btn-success mb-3">Create new account</button>
        </form>
        <a class="btn btn-danger" href="/products">Go back to home page</a>
    </div>
</div>